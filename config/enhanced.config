# Enhanced Lua WASM External Storage API - Configuration

# Build configuration for enhanced features
ENHANCED_BUILD_OPTIONS="--enhanced --release"

# Function serialization settings
FUNCTION_SERIALIZATION_ENABLED=true
FUNCTION_MAX_SIZE=102400  # 100KB
FUNCTION_COMPRESSION_THRESHOLD=1024  # 1KB
FUNCTION_REGISTRY_SIZE=50

# Batch operation settings
BATCH_MAX_SIZE=1000
BATCH_MAX_BYTES=65536  # 64KB
BATCH_TIMEOUT_MS=30000  # 30 seconds
BATCH_TRANSACTIONS_ENABLED=true

# Query engine settings
QUERY_INDEX_ENABLED=true
QUERY_INDEX_MAX_SIZE=100000
QUERY_TIMEOUT_MS=10000  # 10 seconds
QUERY_CACHE_SIZE=1000

# Security settings
SECURITY_VALIDATION_ENABLED=true
SECURITY_BYTECODE_VALIDATION=true
SECURITY_INPUT_SANITIZATION=true
SECURITY_AUDIT_LOGGING=true

# Performance settings
PERFORMANCE_CACHE_ENABLED=true
PERFORMANCE_COMPRESSION_ENABLED=true
PERFORMANCE_QUERY_OPTIMIZATION=true
PERFORMANCE_MEMORY_MONITORING=true

# Browser compatibility
BROWSER_MIN_VERSION_CHROME=80
BROWSER_MIN_VERSION_FIREFOX=79
BROWSER_MIN_VERSION_SAFARI=13.1
BROWSER_MIN_VERSION_EDGE=79

# Development settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
PERFORMANCE_PROFILING=false