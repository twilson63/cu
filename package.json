{
  "name": "wasm-compute",
  "version": "2.0.0",
  "description": "Secure sandboxed Lua compute environment in WebAssembly with persistent storage, function serialization, and wallet-authenticated relay services",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "web/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "./build.sh",
    "demo": "cd demo && python3 -m http.server 8000",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright test && playwright show-report",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twilson63/wasm-compute.git"
  },
  "keywords": [
    "lua",
    "webassembly",
    "wasm",
    "compute",
    "sandbox",
    "persistent",
    "indexeddb",
    "zig",
    "wallet",
    "relay",
    "llm",
    "secrets-management",
    "web3"
  ],
  "author": "Tom Wilson <tom@hyper.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/twilson63/wasm-compute/issues"
  },
  "homepage": "https://github.com/twilson63/wasm-compute#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "puppeteer": "^24.26.1"
  }
}
